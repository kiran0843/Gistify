{
  "name": "gistify",
  "version": "1.0.0",
  "description": "Chrome extension that summarizes web content using Gemini API",
  "main": "server/index.js",
  "scripts": {
    "dev": "concurrently \"npm run dev:server\" \"npm run dev:extension\"",
    "dev:server": "nodemon --watch server --ext js,json --signal SIGTERM server/index.js",
    "dev:extension": "cd extension && npm run dev",
    "build": "cd extension && npm run build",
    "install:all": "npm install && cd extension && npm install",
    "start": "node server/index.js",
    "setup": "node setup.js"
  },
  "keywords": [
    "chrome-extension",
    "gemini",
    "summarizer",
    "react",
    "vite"
  ],
  "author": "Gistify Team",
  "license": "MIT",
  "dependencies": {
    "@google/generative-ai": "^0.2.1",
    "cors": "^2.8.5",
    "dotenv": "^16.6.1",
    "express": "^4.18.2",
    "helmet": "^7.1.0",
    "rate-limiter-flexible": "^2.4.2"
  },
  "devDependencies": {
    "concurrently": "^8.2.2",
    "nodemon": "^3.0.2"
  }
}
